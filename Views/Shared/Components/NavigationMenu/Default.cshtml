@model IEnumerable<string>

<div class="row">

    <a class="col btn btn-outline-success"
       asp-action="Index" asp-controller="Home"
       asp-route-page="1">
        Home
    </a>

    @foreach (string category in Model)
    {
        <a class="col btn @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-success")"
           asp-action="Index" asp-controller="Home"
           asp-route-category="@category"
           asp-route-pageNum="1">
            @category
        </a>
    }
</div>
